            </ul>
        </main>
        <aside>
            <section id="game-state">
                <p>Time: <span id="time"></span></p>
                <p>Game State</p>
                <p id="state"> <strong>GAME STATE</strong> </p>
            </section>
            <section id="evaluate">
                <p>How good is the guess?</p>
                <p class="muted">Red for correct color & place</p>
                <p class="muted">Yellow for correct color only</p>
                <label>Red: </label>
                <input type="text" id="red-evaluate" name="red"><br><br>
                <label>Yellow: </label>
                <input type="text" id="yellow-evaluate" name="yellow"><br><br>
                <button type="button" id="evaluation-submit">Submit</button>
            </section>
            <!-- The sections color-selection or evaluation will be hidden according to the player -->
            <section id="color-selection">
                <p>Please click on the image you want to pick</p>
                <svg height="100" width="230">
                    <circle id="red" cx="25" cy="25" r="20" stroke="black" stroke-width="3" fill="#FF0000"></circle>
                    <circle id="green" cx="85" cy="25" r="20" stroke="black" stroke-width="3" fill="#00FF00"></circle>
                    <circle id="blue" cx="145" cy="25" r="20" stroke="black" stroke-width="3" fill="#0000FF"></circle>
                    <circle id="yellow" cx="205" cy="25" r="20" stroke="black" stroke-width="3" fill="#FFFF00"></circle>

                    <circle id="purple" cx="25" cy="75" r="20" stroke="black" stroke-width="3" fill="#D000FF"></circle>
                    <circle id="orange" cx="85" cy="75" r="20" stroke="black" stroke-width="3" fill="#FF9100"></circle>
                    <circle id="cyan" cx="145" cy="75" r="20" stroke="black" stroke-width="3" fill="#00FFEE"></circle>
                    <circle id="brown" cx="205" cy="75" r="20" stroke="black" stroke-width="3" fill="#4A2E0A"></circle>
                </svg> 
            </section>
            <section>
                <button class="circle-button">Play</button>
                <button class="circle-button">Reset</button>
            </section>
        </aside>
