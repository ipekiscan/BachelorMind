    <head>
        <meta charset="utf-8"/>
        <title>BachelorMind</title>
        <script src="js/game.js"></script>
    </head>
    <body>
        <header>
            <h1 class="title">BachelorMind</h1>
        </header>
        <aside class="left">
            <ul>
                <li><strong>Room:</strong> <span id="room"></span></li>
                <li><strong>Mode:</strong> <span id="mode"></span></li>
                <li><strong>Role:</strong> <span id="role"></span></li>
            </ul>
            <button id="quit-button" type="button">Quit Game</button>
        </aside>
        <main>
            <ul>
                <li id="code">
                    <svg height="50" width="300">
                        <circle id="code-1" cx="90" cy="25" r="20" stroke="black" stroke-width="3" fill="white"></circle>
                        <circle id="code-2" cx="150" cy="25" r="20" stroke="black" stroke-width="3" fill="white"></circle>
                        <circle id="code-3" cx="210" cy="25" r="20" stroke="black" stroke-width="3" fill="white"></circle>
                        <circle id="code-4" cx="270" cy="25" r="20" stroke="black" stroke-width="3" fill="white"></circle>
                    </svg> 
                </li>
